#include <iostream>
#define int long long
using namespace std;

int32_t main() {
    int t;
    cin>>t;
    while(t--){
        string s;
        cin>>s;
        int n = s.size();
        int count=0;
        for(int i=0;i<n-1;i++){
            if(s[i] =='<' && s[i+1]=='>') count++;
        }
        cout<<count<<endl;
    }
	// your code goes here
	return 0;
}
